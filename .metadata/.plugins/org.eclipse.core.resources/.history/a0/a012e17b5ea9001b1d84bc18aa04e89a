package variaveis;

public class Program {

	public static void main(String[] args) {

		/*expressoes + operadores aritmeticos*/
		
	
		
		int a = 2 + 1;
		
		System.out.println(" 2 + 1 = " + a);
		
		int b = 2 * 4; 
		
		System.out.println(" 2 * 4 = " + b);
		
		int c = 4 / 2; 
		
		System.out.println(" 4 / 2 = " + c);
				
		int d = 2 - 2;
		
		System.out.println(" 10 - 4 = " + d);
		
		int e = 4 % 2;
		
		System.out.println(" 4 % 2 = " + e);
		
	}

}
